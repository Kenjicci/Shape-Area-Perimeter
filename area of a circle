import math

class Shape:
    def area(self):
        pass

    def perimeter(self):
        pass

    def display(self):
        pass

class Circle(Shape):
    def __init__(self, radius):
        self.radius = radius

    def area(self):
        return 3.14 * self.radius ** 2

    def perimeter(self):
        return 2 * 3.14 * self.radius

    def display(self):
        print(f"Circle - Radius: {self.radius}, Area: {self.area()}, Perimeter: {self.perimeter()}")


circle = Circle(5)


shapes = [circle]

for shape in shapes:
    shape.display()
